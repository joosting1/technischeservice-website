  // Add event listeners
  heroTitleColor?.addEventListener('input', updateStyles);
  heroShadowColor?.addEventListener('input', updateStyles);
  shadowDepth?.addEventListener('input', updateStyles);
  shadowBlur?.addEventListener('input', updateStyles);
  shadowOpacity?.addEventListener('input', updateStyles);
  heroSubColor?.addEventListener('input', updateStyles);
  heroEyebrowColor?.addEventListener('input', updateStyles);
  btnColor?.addEventListener('input', updateStyles);
  btnTextColor?.addEventListener('input', updateStyles);
  btnSat?.addEventListener('input', updateStyles);
  glassBlur?.addEventListener('input', updateStyles);

  // Reset button
  document.getElementById('resetBtn')?.addEventListener('click', () => {
    if (heroTitleColor) heroTitleColor.value = '#ffffff';
    if (heroShadowColor) heroShadowColor.value = '#3b82f6';
    if (shadowDepth) shadowDepth.value = '5';
    if (shadowBlur) shadowBlur.value = '20';
    if (shadowOpacity) shadowOpacity.value = '0.8';
    if (heroSubColor) heroSubColor.value = '#e2e8f0';
    if (heroEyebrowColor) heroEyebrowColor.value = '#60a5fa';
    if (btnColor) btnColor.value = '#3b82f6';
    if (btnTextColor) btnTextColor.value = '#ffffff';
    if (btnSat) btnSat.value = '100';
    if (glassBlur) glassBlur.value = '14';
    updateStyles();
  });

  // Copy CSS button
  document.getElementById('copyBtn')?.addEventListener('click', () => {
    const output = document.getElementById('cssOutput') as HTMLElement;
    const textarea = document.getElementById('cssCode') as HTMLTextAreaElement;
    
    if (output && textarea) {
      output.style.display = 'block';
      textarea.value = styleEl.textContent || '';
      textarea.select();
      document.execCommand('copy');
      
      const btn = document.getElementById('copyBtn');
      if (btn) {
        btn.textContent = '‚úì Gekopieerd!';
        setTimeout(() => {
          btn.textContent = 'üìã Kopieer CSS';
        }, 2000);
      }
    }
  });

  // Initialize
  updateStyles();
</script>
