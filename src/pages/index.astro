<style>
.design-controls {
  position: fixed;
  bottom: 2rem;
  left: 2rem;
  z-index: 10000;
  font-family: system-ui, -apple-system, sans-serif;
}

.toggle-btn {
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  box-shadow: 0 8px 24px rgba(0,0,0,0.3), 0 0 20px rgba(59,130,246,0.4);
  transition: transform 0.3s, box-shadow 0.3s;
}

.toggle-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 12px 32px rgba(0,0,0,0.4), 0 0 30px rgba(59,130,246,0.6);
}

.controls-content {
  display: none;
  position: absolute;
  bottom: 4.5rem;
  left: 0;
  background: rgba(15, 23, 42, 0.95);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 1rem;
  padding: 1.5rem;
  width: 320px;
  max-height: 70vh;
  overflow-y: auto;
  box-shadow: 0 20px 60px rgba(0,0,0,0.5), 0 0 40px rgba(59,130,246,0.2);
}

.controls-content.show {
  display: block;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.control-group {
  margin-bottom: 1.25rem;
}

.control-group label {
  display: block;
  color: #e2e8f0;
  font-size: 0.875rem;
  font-weight: 500;
  margin-bottom: 0.5rem;
}

.control-group span {
  color: #60a5fa;
  font-weight: 600;
}

.control-group input[type="range"] {
  width: 100%;
  height: 6px;
  border-radius: 3px;
  background: rgba(255,255,255,0.1);
  outline: none;
  cursor: pointer;
}

.control-group input[type="range"]::-webkit-slider-thumb {
  appearance: none;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  cursor: pointer;
  box-shadow: 0 2px 8px rgba(59,130,246,0.5);
}

.control-group input[type="range"]::-moz-range-thumb {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  cursor: pointer;
  border: none;
  box-shadow: 0 2px 8px rgba(59,130,246,0.5);
}

.control-group input[type="color"] {
  width: 100%;
  height: 40px;
  border: 2px solid rgba(255,255,255,0.2);
  border-radius: 0.5rem;
  cursor: pointer;
  background: transparent;
}
</style>

<script>
  const styleEl = document.createElement('style');
  document.head.appendChild(styleEl);

  const toggleBtn = document.getElementById('toggleControls');
  const controlsContent = document.getElementById('controlsContent');

  toggleBtn?.addEventListener('click', () => {
    controlsContent?.classList.toggle('show');
  });

  // Get all controls
  const heroTitleColor = document.getElementById('heroTitleColor') as HTMLInputElement;
  const heroShadowColor = document.getElementById('heroShadowColor') as HTMLInputElement;
  const shadowDepth = document.getElementById('shadowDepth') as HTMLInputElement;
  const shadowBlur = document.getElementById('shadowBlur') as HTMLInputElement;
  const shadowOpacity = document.getElementById('shadowOpacity') as HTMLInputElement;
  const heroSubColor = document.getElementById('heroSubColor') as HTMLInputElement;
  const heroEyebrowColor = document.getElementById('heroEyebrowColor') as HTMLInputElement;
  const btnColor = document.getElementById('btnColor') as HTMLInputElement;
  const btnTextColor = document.getElementById('btnTextColor') as HTMLInputElement;
  const btnSat = document.getElementById('btnSat') as HTMLInputElement;
  const glassBlur = document.getElementById('glassBlur') as HTMLInputElement;

  function hexToRgb(hex: string) {
    const result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
    return result ? {
      r: parseInt(result[1], 16),
      g: parseInt(result[2], 16),
      b: parseInt(result[3], 16)
    } : { r: 59, g: 130, b: 246 };
  }

  function updateStyles() {
    const titleColor = heroTitleColor?.value || '#ffffff';
    const shadowColor = heroShadowColor?.value || '#3b82f6';
    const depth = parseInt(shadowDepth?.value || '5');
    const blur = parseInt(shadowBlur?.value || '20');
    const opacity = parseFloat(shadowOpacity?.value || '0.8');
    const subColor = heroSubColor?.value || '#e2e8f0';
    const eyebrowColor = heroEyebrowColor?.value || '#60a5fa';
    const buttonColor = btnColor?.value || '#3b82f6';
    const buttonTextColor = btnTextColor?.value || '#ffffff';
    const buttonSat = parseInt(btnSat?.value || '100');
    const gBlur = parseInt(glassBlur?.value || '14');

    const shadowRgb = hexToRgb(shadowColor);

    // Update value displays
    const titleColorVal = document.getElementById('heroTitleColorValue');
    const shadowColorVal = document.getElementById('heroShadowColorValue');
    const depthVal = document.getElementById('shadowDepthValue');
    const blurVal = document.getElementById('shadowBlurValue');
    const opacityVal = document.getElementById('shadowOpacityValue');
    const subColorVal = document.getElementById('heroSubColorValue');
    const eyebrowColorVal = document.getElementById('heroEyebrowColorValue');
    const btnColorVal = document.getElementById('btnColorValue');
    const btnTextColorVal = document.getElementById('btnTextColorValue');
    const satVal = document.getElementById('btnSatValue');
    const gBlurVal = document.getElementById('glassBlurValue');

    if (titleColorVal) titleColorVal.textContent = titleColor;
    if (shadowColorVal) shadowColorVal.textContent = shadowColor;
    if (depthVal) depthVal.textContent = `${depth}`;
    if (blurVal) blurVal.textContent = `${blur}`;
    if (opacityVal) opacityVal.textContent = `${opacity}`;
    if (subColorVal) subColorVal.textContent = subColor;
    if (eyebrowColorVal) eyebrowColorVal.textContent = eyebrowColor;
    if (btnColorVal) btnColorVal.textContent = buttonColor;
    if (btnTextColorVal) btnTextColorVal.textContent = buttonTextColor;
    if (satVal) satVal.textContent = `${buttonSat}`;
    if (gBlurVal) gBlurVal.textContent = `${gBlur}`;

    // Generate 3D shadow layers
    let shadowLayers = [];
    for (let i = 1; i <= depth; i++) {
      const layerOpacity = opacity * (1 - (i / (depth + 2)));
      shadowLayers.push(`0 ${i}px 0 rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${layerOpacity})`);
    }
    shadowLayers.push(`0 ${depth + 3}px ${blur}px rgba(0,0,0,0.6)`);
    shadowLayers.push(`0 ${depth + 7}px ${blur + 4}px rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${opacity * 0.3})`);

    const btnRgb = hexToRgb(buttonColor);

    const css = `
      /* Hero Title Styling */
      .hc-hero .hc-title, 
      .hc-hero h1 {
        color: ${titleColor} !important;
        text-shadow: ${shadowLayers.join(',\n    ')} !important;
      }

      /* Hero Subtitle */
      .hero-subtitle {
        color: ${subColor} !important;
      }

      /* Hero Eyebrow */
      .hero-eyebrow {
        color: ${eyebrowColor} !important;
      }

      /* Other Titles (Services, etc) */
      .glx-title {
        color: ${titleColor} !important;
        text-shadow: ${shadowLayers.join(',\n    ')} !important;
      }

      .glx-cta h2 {
        color: ${titleColor} !important;
        text-shadow: ${shadowLayers.join(',\n    ')} !important;
      }

      /* Buttons */
      .glx-btn-primary, .btn-primary {
        background: linear-gradient(135deg, 
          rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 1), 
          rgba(${Math.max(0, btnRgb.r - 30)}, ${Math.max(0, btnRgb.g - 30)}, ${Math.max(0, btnRgb.b - 30)}, 1)
        ) !important;
        color: ${buttonTextColor} !important;
        box-shadow: 0 8px 24px -8px rgba(0,0,0,0.6), 
                    0 4px 16px rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, ${opacity * 0.4}) !important;
      }

      .glx-btn-primary:hover, .btn-primary:hover {
        color: ${buttonTextColor} !important;
        box-shadow: 0 14px 32px -10px rgba(0,0,0,0.65), 
                    0 8px 24px rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, ${opacity * 0.6}) !important;
      }

      /* WhatsApp button styling */
      .btn-outline {
        background: linear-gradient(135deg, 
          rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 0.1), 
          rgba(${Math.max(0, btnRgb.r - 30)}, ${Math.max(0, btnRgb.g - 30)}, ${Math.max(0, btnRgb.b - 30)}, 0.1)
        ) !important;
        color: ${buttonTextColor} !important;
        border: 2px solid rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 0.5) !important;
        backdrop-filter: blur(10px) !important;
        box-shadow: 0 4px 16px rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, ${opacity * 0.2}) !important;
      }

      .btn-outline:hover {
        background: linear-gradient(135deg, 
          rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 0.2), 
          rgba(${Math.max(0, btnRgb.r - 30)}, ${Math.max(0, btnRgb.g - 30)}, ${Math.max(0, btnRgb.b - 30)}, 0.2)
        ) !important;
        color: ${buttonTextColor} !important;
        border-color: rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 0.8) !important;
        box-shadow: 0 8px 24px rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, ${opacity * 0.4}) !important;
      }

      /* Service Card Hover */
      .glx-service:hover {
        border-color: rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, 0.8) !important;
        box-shadow: 0 22px 50px -14px rgba(0,0,0,0.7),
                    0 0 24px rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${opacity * 0.5}),
                    0 0 0 1px rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, 0.5) !important;
