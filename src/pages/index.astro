      /* Background gradients */
      .home-glass-hero {
        background:
          linear-gradient(160deg, rgba(15,23,42,0.88) 0%, rgba(15,25,45,0.82) 45%, rgba(20,32,54,0.78) 70%),
          radial-gradient(circle at 25% 20%, rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${opacity * 0.22}), transparent 65%),
          radial-gradient(circle at 80% 75%, rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${opacity * 0.18}), transparent 60%) !important;
