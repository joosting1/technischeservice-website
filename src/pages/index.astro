      .glx-service {
        backdrop-filter: blur(${gBlur}px) saturate(160%) !important;
        -webkit-backdrop-filter: blur(${gBlur}px) saturate(160%) !important;
      }

      /* Badge */
      .hero-badge {
        background: linear-gradient(135deg, 
          rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, 1), 
          rgba(${Math.min(255, btnRgb.r + 30)}, ${Math.min(255, btnRgb.g + 30)}, ${Math.min(255, btnRgb.b + 30)}, 1)
        ) !important;
        box-shadow: 0 4px 18px -4px rgba(0,0,0,.6), 
                    0 0 20px rgba(${btnRgb.r}, ${btnRgb.g}, ${btnRgb.b}, ${opacity * 0.5}) !important;
