      .page-hero-glass {
        background:
          linear-gradient(150deg, rgba(15,23,42,0.90) 0%, rgba(18,30,51,0.82) 45%, rgba(22,36,58,0.78) 75%),
          radial-gradient(circle at 15% 25%, rgba(${shadowRgb.r}, ${shadowRgb.g}, ${shadowRgb.b}, ${opacity * 0.22}), transparent 60%),
