---
import Layout from '../layouts/Layout.astro';
import GoogleReviews from '../components/GoogleReviews.astro';
import '../styles/homepage-glass.css';
---

<Layout 
  title="Technische Service Assen - Professionele Installaties" 
  description="Professionele installatie van airco, Quooker en waterontharders in Assen en omgeving. BRL-100 gecertificeerd met 15+ jaar ervaring. Gratis offerte en advies."
  background="/assets/homepage/responsive/mitsubishi-1440w.avif" 
  withOverlay
>
  <Fragment slot="head">
    <link rel="preload" as="image" imagesrcset="/assets/quooker-flex-square/responsive/2788-fxsgme-gunmetal-kurkuma-480w.jpg 480w, /assets/quooker-flex-square/responsive/2788-fxsgme-gunmetal-kurkuma-768w.jpg 768w, /assets/quooker-flex-square/responsive/2788-fxsgme-gunmetal-kurkuma-1024w.jpg 1024w, /assets/quooker-flex-square/responsive/2788-fxsgme-gunmetal-kurkuma-1440w.jpg 1440w" imagesizes="(max-width: 1024px) 92vw, 640px" />
  </Fragment>

  <!-- Gestandaardiseerde Hero -->
  <section class="hc-hero hero-left hero-spacious">
    <div class="hc-container">
      <div class="hero-grid">
        <div class="hero-content">
          <span class="hero-eyebrow">Installatie & Service</span>
          <h1 class="hc-title">Technische Service Assen</h1>
          <p class="hero-subtitle">Professionele installatie van airco, Quooker en waterontharders. BRL-100 gecertificeerd met 15+ jaar ervaring voor betrouwbare kwaliteit.</p>
          <div class="hero-actions">
            <a href="/offerte" class="btn btn-primary">Gratis Offerte</a>
            <a href="https://wa.me/31658980933" target="_blank" rel="noopener" class="btn btn-outline">WhatsApp</a>
          </div>
        </div>
        <div class="hero-image">
          <!-- Services Quick Links -->
          <div class="bg-gradient-to-br from-slate-800/90 to-slate-900/90 backdrop-blur-sm border border-slate-700/50 rounded-xl p-6 shadow-2xl">
            <div class="text-center mb-4">
              <h3 class="text-xl font-bold text-white mb-2">Onze Hoofddiensten</h3>
              <p class="text-slate-400 text-sm">Klik voor meer informatie</p>
            </div>
            <div class="space-y-3">
              <a href="/airco-installatie" class="block p-4 bg-slate-700/30 hover:bg-slate-700/50 rounded-lg transition-all duration-300 group hover:scale-[1.02]">
                <div class="flex items-center">
                  <div class="flex-1">
                    <h4 class="text-white font-semibold mb-1 group-hover:text-blue-400 transition-colors">Airco Installatie</h4>
                    <p class="text-slate-400 text-sm">Split & multi-split systemen</p>
                  </div>
                  <svg class="w-5 h-5 text-slate-400 group-hover:text-blue-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
              <a href="/quooker-installatie" class="block p-4 bg-slate-700/30 hover:bg-slate-700/50 rounded-lg transition-all duration-300 group hover:scale-[1.02]">
                <div class="flex items-center">
                  <div class="flex-1">
                    <h4 class="text-white font-semibold mb-1 group-hover:text-orange-400 transition-colors">Quooker Kranen</h4>
                    <p class="text-slate-400 text-sm">Kokend water direct uit de kraan</p>
                  </div>
                  <svg class="w-5 h-5 text-slate-400 group-hover:text-orange-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
              <a href="/waterontharder" class="block p-4 bg-slate-700/30 hover:bg-slate-700/50 rounded-lg transition-all duration-300 group hover:scale-[1.02]">
                <div class="flex items-center">
                  <div class="flex-1">
                    <h4 class="text-white font-semibold mb-1 group-hover:text-cyan-400 transition-colors">Waterontharders</h4>
                    <p class="text-slate-400 text-sm">Zachter water, minder kalk</p>
                  </div>
                  <svg class="w-5 h-5 text-slate-400 group-hover:text-cyan-400 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Glass Grid (no section overlay) -->
  <section class="glx-services-section">
    <div class="hc-container">
      <div class="glx-section-head">
        <h2 class="hc-title mb-3">Onze Services</h2>
      </div>
      <div class="glx-services-grid">
        <div class="glx-service">
          <h3>Airco Installatie</h3>
          <p>Split & multi-split airco. Daikin, Mitsubishi Heavy en Sinclair.</p>
          <ul>
            <li>Gratis advies & offerte</li>
            <li>2 jaar installatiegarantie</li>
            <li>Koeling én verwarming</li>
          </ul>
          <a href="/airco-installatie" class="glx-btn-primary">Meer info</a>
        </div>
        <div class="glx-service">
          <h3>Quooker Installatie</h3>
          <p>Alle modellen inclusief Flex & Cube uitbreiding voor bruisend water.</p>
          <ul>
            <li>20+ jaar ervaring</li>
            <li>Alle modellen beschikbaar</li>
            <li>Cube uitbreiding</li>
          </ul>
          <a href="/quooker-installatie" class="glx-btn-primary">Meer info</a>
        </div>
        <div class="glx-service">
          <h3>Waterontharder</h3>
          <p>Delta Europese kwaliteit voor zachter water en minder kalk.</p>
          <ul>
            <li>Gratis watertest</li>
            <li>Europese kwaliteit</li>
            <li>Minder zeep nodig</li>
          </ul>
          <a href="/waterontharder" class="glx-btn-primary">Meer info</a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Glass Panel -->
  <section class="space-top">
    <div class="hc-container">
      <div class="glx-cta">
        <h2>Klaar voor uw installatie?</h2>
        <div class="flex flex-wrap gap-4">
          <a href="/offerte" class="glx-btn-primary">Gratis Offerte</a>
          <a href="https://wa.me/31658980933" target="_blank" rel="noopener" class="glx-btn-primary" style="background:linear-gradient(90deg,#25d366,#128c7e);color:#fff;">WhatsApp</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Calculator Promo Section -->
  <section class="hc-section">
    <div class="hc-container">
      <div class="hc-block">
        <span class="hc-accent-bar" aria-hidden="true"></span>
        <div class="p-8 md:p-12">
          <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-200 mb-4">
              Premium Airco Calculator
            </h2>
            <p class="text-lg text-slate-300 mb-8">
              Weet niet welk vermogen u nodig heeft? Gebruik onze wetenschappelijke calculator om het perfecte 
              aircovermogen voor uw ruimte te berekenen. Rekening houdend met oppervlakte, isolatie, 
              aantal personen en meer.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
              <a href="/airco-calculator" class="btn btn-primary text-lg px-8 py-4">
                Bereken uw Vermogen
              </a>
              <span class="text-slate-400 text-sm">Gratis & direct resultaat</span>
            </div>
            <div class="mt-8 pt-8 border-t border-slate-700">
              <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
                <div>
                  <div class="text-sm text-slate-300 font-semibold">Wetenschappelijk</div>
                </div>
                <div>
                  <div class="text-sm text-slate-300 font-semibold">Alle factoren</div>
                </div>
                <div>
                  <div class="text-sm text-slate-300 font-semibold">Direct resultaat</div>
                </div>
                <div>
                  <div class="text-sm text-slate-300 font-semibold">100% gratis</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why (reasons) glass section (dark variant) -->
  <section class="glx-why hc-section">
    <div class="hc-container">
      <div class="glx-section-head">
        <h2 class="hc-title mb-3">Waarom Technische Service Assen?</h2>
      </div>
      <div class="glx-why-grid">
        <div class="glx-why-item">
          <h3>BRL Gecertificeerd</h3>
          <p>BRL-100 voor kwaliteit & vakmanschap.</p>
        </div>
        <div class="glx-why-item">
          <h3>15+ Jaar Ervaring</h3>
          <p>Ruime ervaring met gerenommeerde merken.</p>
        </div>
        <div class="glx-why-item">
          <h3>Professionele Service</h3>
          <p>Advies, installatie & nazorg uit één hand.</p>
        </div>
        <div class="glx-why-item">
          <h3>Scherpe Prijzen</h3>
          <p>Eerlijk & transparant zonder verrassingen.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Reviews Widget -->
  <GoogleReviews />

  <!-- Contact Glass Section -->
  <section class="glx-contact">
    <div class="hc-container">
      <div class="glx-section-head">
        <h2 class="hc-title mb-3">Contact & Gegevens</h2>
        <p class="hc-subtitle mx-auto">Bereik ons direct of vraag een vrijblijvende offerte.</p>
      </div>
      <div class="glx-contact-grid">
        <div class="glx-contact-card">
          <h3>Adres</h3>
          <p>Groenkampen 31<br/>9407 RJ Assen</p>
        </div>
        <div class="glx-contact-card">
          <h3>Contact</h3>
          <p><a href="tel:0658980933">06-58980933</a><br/><a href="mailto:info@technischeservice.nl">info@technischeservice.nl</a></p>
        </div>
        <div class="glx-contact-card">
          <h3>Bedrijfsgegevens</h3>
          <p>KvK: 83742638<br/>BRL-100 Gecertificeerd</p>
        </div>
        <div class="glx-contact-card">
          <h3>Actie</h3>
          <p><a href="/offerte">Vraag gratis offerte aan</a></p>
        </div>
      </div>
    </div>
  </section>
</Layout>
