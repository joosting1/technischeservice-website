    border: 1px solid rgba(96, 165, 250, 0.3);
    border-radius: 8px;
    padding: 1rem;
    color: #93c5fd;
    font-family: 'Courier New', monospace;
    font-size: 0.85rem;
    resize: vertical;
  }

  /* =============================================
     RESPONSIVE
     ============================================= */
  @media (max-width: 768px) {
    .hero-content {
      padding: 3rem 1rem;
    }

    .hero-title {
      font-size: 1.75rem;
    }

    .content-block {
      padding: 2rem 1.5rem;
    }

    .meta-info {
      gap: 1rem;
    }

    .current {
      display: none;
    }

