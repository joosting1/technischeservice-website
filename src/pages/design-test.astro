    color: white;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
  }

  .reset-btn:hover, .copy-btn:hover {
    background: rgba(59, 130, 246, 0.5);
    transform: translateY(-2px);
  }

  .css-output {
    margin-top: 1rem;
  }

  .css-output textarea {
    width: 100%;
    height: 200px;
