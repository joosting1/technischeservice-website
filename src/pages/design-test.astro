</style>

<script>
  // Toggle control panel
  const toggleBtn = document.getElementById('controlsToggle');
  const panel = document.getElementById('controlsPanel');
  
  toggleBtn?.addEventListener('click', () => {
    panel?.classList.toggle('active');
  });

  // Get all controls
  const headerOpacity = document.getElementById('headerOpacity') as HTMLInputElement;
  const contentOpacity = document.getElementById('contentOpacity') as HTMLInputElement;
  const footerOpacity = document.getElementById('footerOpacity') as HTMLInputElement;
  const blurStrength = document.getElementById('blurStrength') as HTMLInputElement;
  const blueHue = document.getElementById('blueHue') as HTMLInputElement;
  const saturation = document.getElementById('saturation') as HTMLInputElement;

  // Get value displays
  const headerOpacityValue = document.getElementById('headerOpacityValue');
  const contentOpacityValue = document.getElementById('contentOpacityValue');
  const footerOpacityValue = document.getElementById('footerOpacityValue');
  const blurStrengthValue = document.getElementById('blurStrengthValue');
  const blueHueValue = document.getElementById('blueHueValue');
  const saturationValue = document.getElementById('saturationValue');

  // Create style element for dynamic CSS
  const styleEl = document.createElement('style');
  document.head.appendChild(styleEl);

  function updateStyles() {
    const hOpacity = parseInt(headerOpacity?.value || '55') / 100;
    const cOpacity = parseInt(contentOpacity?.value || '15') / 100;
    const fOpacity = parseInt(footerOpacity?.value || '55') / 100;
    const blur = blurStrength?.value || '24';
    const hue = blueHue?.value || '220';
    const sat = saturation?.value || '180';

    // Update value displays
    if (headerOpacityValue) headerOpacityValue.textContent = `${Math.round(hOpacity * 100)}%`;
    if (contentOpacityValue) contentOpacityValue.textContent = `${Math.round(cOpacity * 100)}%`;
    if (footerOpacityValue) footerOpacityValue.textContent = `${Math.round(fOpacity * 100)}%`;
    if (blurStrengthValue) blurStrengthValue.textContent = `${blur}px`;
    if (blueHueValue) blueHueValue.textContent = `${hue}°`;
    if (saturationValue) saturationValue.textContent = `${sat}%`;

    // Generate CSS
    const css = `
      .page-background .background-overlay {
        background: linear-gradient(
          135deg,
          hsla(${hue}, 60%, 35%, ${hOpacity}) 0%,
          hsla(${hue}, 70%, 45%, ${hOpacity - 0.05}) 25%,
          hsla(${hue}, 65%, 50%, ${hOpacity - 0.10}) 50%,
          hsla(${hue}, 68%, 42%, ${hOpacity - 0.05}) 75%,
          hsla(${hue}, 60%, 35%, ${hOpacity}) 100%
        ) !important;
        backdrop-filter: blur(2px) !important;
      }

      .hc-header {
        background: linear-gradient(
          135deg,
          hsla(${hue}, 60%, 35%, ${hOpacity}) 0%,
          hsla(${hue}, 70%, 45%, ${hOpacity - 0.05}) 50%,
          hsla(${hue}, 65%, 42%, ${hOpacity}) 100%
        ) !important;
        backdrop-filter: blur(${blur}px) saturate(${sat}%) !important;
        -webkit-backdrop-filter: blur(${blur}px) saturate(${sat}%) !important;
      }

      .content-block {
        background: hsla(${hue}, 60%, 35%, ${cOpacity}) !important;
        backdrop-filter: blur(${blur}px) saturate(${sat}%) !important;
      }

      .cta-block {
        background: linear-gradient(135deg, 
          hsla(${hue}, 70%, 55%, ${cOpacity}) 0%, 
          hsla(${hue}, 75%, 50%, ${cOpacity}) 100%
        ) !important;
        backdrop-filter: blur(${parseInt(blur) - 8}px) saturate(${parseInt(sat) - 30}%) !important;
      }

      .faq-item {
        background: hsla(${hue}, 70%, 55%, ${cOpacity - 0.03}) !important;
        backdrop-filter: blur(${parseInt(blur) - 8}px) saturate(${parseInt(sat) - 30}%) !important;
      }

      footer {
        background: linear-gradient(
          135deg,
          hsla(${hue}, 60%, 35%, ${fOpacity}) 0%,
          hsla(${hue}, 70%, 45%, ${fOpacity - 0.05}) 50%,
          hsla(${hue}, 65%, 42%, ${fOpacity}) 100%
        ) !important;
        backdrop-filter: blur(${blur}px) saturate(${sat}%) !important;
        -webkit-backdrop-filter: blur(${blur}px) saturate(${sat}%) !important;
      }
    `;

    styleEl.textContent = css;
  }

  // Add event listeners
  headerOpacity?.addEventListener('input', updateStyles);
  contentOpacity?.addEventListener('input', updateStyles);
  footerOpacity?.addEventListener('input', updateStyles);
  blurStrength?.addEventListener('input', updateStyles);
  blueHue?.addEventListener('input', updateStyles);
  saturation?.addEventListener('input', updateStyles);

  // Reset button
  document.getElementById('resetBtn')?.addEventListener('click', () => {
    if (headerOpacity) headerOpacity.value = '55';
    if (contentOpacity) contentOpacity.value = '15';
    if (footerOpacity) footerOpacity.value = '55';
    if (blurStrength) blurStrength.value = '24';
    if (blueHue) blueHue.value = '220';
    if (saturation) saturation.value = '180';
    updateStyles();
  });

  // Copy CSS button
  document.getElementById('copyBtn')?.addEventListener('click', () => {
    const output = document.getElementById('cssOutput') as HTMLElement;
    const textarea = document.getElementById('cssCode') as HTMLTextAreaElement;
    
    if (output && textarea) {
      output.style.display = 'block';
      textarea.value = styleEl.textContent || '';
      textarea.select();
      document.execCommand('copy');
      
      const btn = document.getElementById('copyBtn');
      if (btn) {
        btn.textContent = 'Gekopieerd!';
        setTimeout(() => {
          btn.textContent = 'Kopieer CSS';
        }, 2000);
      }
    }
  });

  // Initialize
  updateStyles();
</script>
