  }

  /* =============================================
     META INFORMATION
     ============================================= */
  .meta-info {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
    color: rgba(255, 255, 255, 0.8);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .meta-icon {
    width: 16px;
    height: 16px;
    opacity: 0.9;
  }

  /* =============================================
     TAGS - Blue Glassmorphism
     ============================================= */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .tag {
    background: rgba(59, 130, 246, 0.25);
    backdrop-filter: blur(10px);
    color: rgba(255, 255, 255, 0.95);
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    border: 1px solid rgba(96, 165, 250, 0.4);
    transition: all 0.3s;
    box-shadow: 0 2px 8px rgba(59, 130, 246, 0.2);
  }

  .tag:hover {
    background: rgba(59, 130, 246, 0.35);
    border-color: rgba(96, 165, 250, 0.6);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  /* =============================================
     CONTENT SECTION - Glasmorphism Style
     ============================================= */
  .content-section {
    padding: 4rem 1.5rem;
  }

  .content-block {
    background: hsla(220, 60%, 35%, 0.15);
    backdrop-filter: blur(18px) saturate(180%);
    border: 1px solid rgba(59, 130, 246, 0.25);
    border-radius: 1.5rem;
    padding: 3rem;
    color: #e2e8f0;
    max-width: 900px;
    margin: 0 auto;
    box-shadow: 0 8px 32px rgba(30, 58, 138, 0.2);
  }

  .content-block h2 {
