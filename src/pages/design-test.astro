    font-size: 1.25rem;
    text-align: center;
  }

  .control-group {
    margin-bottom: 1.25rem;
  }

  .control-group label {
    display: block;
    color: #93c5fd;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

