				<div class="hc-block">
					<picture>
						<source type="image/avif" srcset="/assets/delta/responsive/delta_escalda-480w.avif 480w, /assets/delta/responsive/delta_escalda-768w.avif 768w, /assets/delta/responsive/delta_escalda-1024w.avif 1024w, /assets/delta/responsive/delta_escalda-1440w.avif 1440w" sizes="(max-width: 640px) 100vw, 320px" />
						<source type="image/webp" srcset="/assets/delta/responsive/delta_escalda-480w.webp 480w, /assets/delta/responsive/delta_escalda-768w.webp 768w, /assets/delta/responsive/delta_escalda-1024w.webp 1024w, /assets/delta/responsive/delta_escalda-1440w.webp 1440w" sizes="(max-width: 640px) 100vw, 320px" />
