---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ContractForm from '../components/ContractForm.astro';
---

<Layout 
  title="Airco Onderhoudscontract | €7,50 per maand | Technische Service Assen" 
  description="Voorkom storingen en behoud optimale werking van uw airco. Onderhoudscontract vanaf €7,50/maand met professionele reiniging en check-ups."
>
  <!-- Hero Section -->
  <section class="hc-hero hero-left hero-spacious">
    <div class="hc-container">
      <Breadcrumbs items={[
        { name: 'Home', href: '/' }, 
        { name: 'Airco Installatie', href: '/airco-installatie' },
        { name: 'Onderhoudscontract' }
      ]} />
      <div class="hero-grid">
        <div class="hero-content">
          <span class="hero-eyebrow">Vanaf €7,50 per maand</span>
          <h1 class="hc-title">Airco Onderhoudscontract</h1>
          <p class="hero-subtitle">Professioneel onderhoud voor optimale werking en energiezuinigheid. Jaarlijks opzegbaar met voorrang bij storingen.</p>
          <div class="hero-actions">
            <a href="#contract-form" class="btn btn-primary">Direct Afsluiten</a>
            <a href="/airco-installatie" class="btn btn-outline">Terug naar Airco</a>
          </div>
        </div>
        <div class="hero-image">
          <picture>
            <source type="image/avif" srcset="/assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-480w.avif 480w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-768w.avif 768w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-1024w.avif 1024w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-1440w.avif 1440w" sizes="(max-width: 768px) 92vw, (max-width: 1200px) 50vw, 600px" />
            <source type="image/webp" srcset="/assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-480w.webp 480w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-768w.webp 768w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-1024w.webp 1024w, /assets/afbeeldingupload/responsive/Mitsubishi Heavy montage Emmen-1440w.webp 1440w" sizes="(max-width: 768px) 92vw, (max-width: 1200px) 50vw, 600px" />
            <img src="/assets/afbeeldingupload/Mitsubishi Heavy montage Emmen.jpg" alt="Airco onderhoud" loading="eager" decoding="async" />
          </picture>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="hc-section hc-section-light">
    <div class="hc-container">
      <div class="max-w-4xl mx-auto">
        <!-- Pricing Card -->
        <div class="hc-block mb-8">
          <span class="hc-accent-bar" aria-hidden="true"></span>
          <div class="p-8 text-center">
            <div class="inline-block bg-gradient-to-r from-orange-500/20 to-orange-600/20 border-2 border-orange-400 rounded-2xl p-8 mb-6">
              <p class="text-slate-300 text-sm uppercase tracking-wide mb-2">Onderhoudscontract</p>
              <p class="text-6xl font-bold text-orange-400 mb-2">€7,50</p>
              <p class="text-slate-400">per maand</p>
            </div>
            <p class="text-slate-300 mb-6">Jaarlijks opzegbaar • Professionele service • Voorrang bij storingen</p>
            <a href="#contract-form" class="btn btn-primary text-lg">
              Direct Afsluiten
            </a>
          </div>
        </div>

        <!-- Wat is inbegrepen -->
        <div class="hc-block mb-8">
          <span class="hc-accent-bar" aria-hidden="true"></span>
          <div class="p-8">
            <h2 class="text-2xl font-bold text-slate-200 mb-6">Wat is inbegrepen?</h2>
            <ul class="space-y-4 text-slate-300">
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Jaarlijkse professionele reiniging</strong>
                  <p class="text-sm text-slate-400 mt-1">Binnen- en buitenunit grondig gereinigd voor optimale luchtstroom</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Complete systeemcheck</strong>
                  <p class="text-sm text-slate-400 mt-1">Controle van koudemiddeldruk, elektrische aansluitingen en werking</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Filter reiniging/vervanging</strong>
                  <p class="text-sm text-slate-400 mt-1">Schone filters voor gezonde lucht en lagere energiekosten</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Condensafvoer controle</strong>
                  <p class="text-sm text-slate-400 mt-1">Voorkom waterlekkage en schade</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Voorrang bij storingen</strong>
                  <p class="text-sm text-slate-400 mt-1">Contracthouders krijgen voorrang bij reparaties</p>
                </div>
              </li>
              <li class="flex items-start gap-3">
                
                <div>
                  <strong class="text-slate-200">Verlengde garantie</strong>
                  <p class="text-sm text-slate-400 mt-1">Fabrieksgarantie blijft geldig bij regelmatig onderhoud</p>
                </div>
              </li>
            </ul>
          </div>
        </div>

        <!-- Waarom regelmatig onderhoud -->
        <div class="hc-block mb-8">
          <span class="hc-accent-bar" aria-hidden="true"></span>
          <div class="p-8">
            <h2 class="text-2xl font-bold text-slate-200 mb-6">Waarom regelmatig onderhoud?</h2>
            <div class="bg-blue-500/10 border border-blue-400/30 rounded-lg p-4 mb-6">
              <p class="text-slate-200 text-sm">
                <strong>Onderhoudscyclus:</strong> Uw airco wordt onderhouden in een cyclus van <strong class="text-orange-400">12 tot 18 maanden</strong>. Wij nemen contact met u op wanneer het tijd is voor de volgende onderhoudsbeurt.
              </p>
            </div>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="bg-slate-800/50 rounded-lg p-6">
                
                <h3 class="text-lg font-semibold text-slate-200 mb-2">Tot 30% lagere energiekosten</h3>
                <p class="text-sm text-slate-400">Een goed onderhouden airco verbruikt significant minder energie</p>
              </div>
              <div class="bg-slate-800/50 rounded-lg p-6">
                
                <h3 class="text-lg font-semibold text-slate-200 mb-2">Optimale koelprestaties</h3>
                <p class="text-sm text-slate-400">Behoud het maximale vermogen van uw airco</p>
              </div>
              <div class="bg-slate-800/50 rounded-lg p-6">
                
                <h3 class="text-lg font-semibold text-slate-200 mb-2">Voorkom storingen</h3>
                <p class="text-sm text-slate-400">Vroegtijdige detectie van problemen voorkomt dure reparaties</p>
              </div>
              <div class="bg-slate-800/50 rounded-lg p-6">
                
                <h3 class="text-lg font-semibold text-slate-200 mb-2">Gezondere lucht</h3>
                <p class="text-sm text-slate-400">Schone filters betekenen betere luchtkwaliteit</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Hoe werkt het -->
        <div class="hc-block mb-8">
          <span class="hc-accent-bar" aria-hidden="true"></span>
          <div class="p-8">
            <h2 class="text-2xl font-bold text-slate-200 mb-6">Hoe werkt het?</h2>
            <div class="space-y-4">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-orange-400 rounded-full flex items-center justify-center text-slate-900 font-bold">
                  1
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-200 mb-1">Contract afsluiten</h3>
                  <p class="text-slate-400">Vul het offerteformulier in of bel ons direct</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-orange-400 rounded-full flex items-center justify-center text-slate-900 font-bold">
                  2
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-200 mb-1">Afspraak inplannen</h3>
                  <p class="text-slate-400">Wij nemen contact op voor een geschikt moment</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-orange-400 rounded-full flex items-center justify-center text-slate-900 font-bold">
                  3
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-200 mb-1">Jaarlijks onderhoud</h3>
                  <p class="text-slate-400">Wij plannen automatisch uw jaarlijkse onderhoudsbeurt</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-orange-400 rounded-full flex items-center justify-center text-slate-900 font-bold">
                  4
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-200 mb-1">Zorgeloos genieten</h3>
                  <p class="text-slate-400">Uw airco blijft optimaal werken, jaar na jaar</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="text-center bg-gradient-to-r from-slate-800 to-slate-700 rounded-lg p-8">
          <h2 class="text-2xl font-bold text-slate-200 mb-4">
            Klaar voor zorgeloos airco-genot?
          </h2>
          <p class="text-slate-300 mb-6">
            Sluit vandaag nog een onderhoudscontract af en voorkom storingen
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#contract-form" class="btn btn-primary">
              Direct Afsluiten
            </a>
            <a href="tel:0658980933" class="btn btn-secondary">
              Bel Direct: 06-58980933
            </a>
          </div>
        </div>
      </div>

      <!-- Contract Form -->
      <div id="contract-form">
        <ContractForm 
          type="airco"
          pricePerUnit="€7,50"
          unitLabel="Aantal buitenunits"
        />
      </div>

    </div>
  </section>
</Layout>
