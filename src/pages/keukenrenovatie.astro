<script>
  // Calculator logic
  function updateCalculations() {
    // Fronten
    const frontenType = document.getElementById('fronten-type') as HTMLSelectElement;
    const frontenAantal = document.getElementById('fronten-aantal') as HTMLInputElement;
    const frontenPrice = parseFloat(frontenType.selectedOptions[0]?.dataset.price || '0');
    const frontenSubtotal = frontenPrice * parseInt(frontenAantal.value || '0');
    (document.getElementById('fronten-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${frontenSubtotal.toFixed(2).replace('.', ',')}`;

    // Wangen
    const wangenType = document.getElementById('wangen-type') as HTMLSelectElement;
    const wangenAantal = document.getElementById('wangen-aantal') as HTMLInputElement;
    const wangenPrice = parseFloat(wangenType.selectedOptions[0]?.dataset.price || '0');
    const wangenSubtotal = wangenPrice * parseInt(wangenAantal.value || '0');
    (document.getElementById('wangen-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${wangenSubtotal.toFixed(2).replace('.', ',')}`;

    // Plinten
    const plintenType = document.getElementById('plinten-type') as HTMLSelectElement;
    const plintenLengte = document.getElementById('plinten-lengte') as HTMLInputElement;
    const plintenPrice = parseFloat(plintenType.selectedOptions[0]?.dataset.price || '0');
    const plintenSubtotal = plintenPrice * parseFloat(plintenLengte.value || '0');
    (document.getElementById('plinten-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${plintenSubtotal.toFixed(2).replace('.', ',')}`;

    // Zijpanelen
    const zijpanelenPrijs = document.getElementById('zijpanelen-prijs') as HTMLInputElement;
    const zijpanelenAantal = document.getElementById('zijpanelen-aantal') as HTMLInputElement;
    const zijpanelenSubtotal = parseFloat(zijpanelenPrijs.value || '0') * parseInt(zijpanelenAantal.value || '0');
    (document.getElementById('zijpanelen-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${zijpanelenSubtotal.toFixed(2).replace('.', ',')}`;

    // Scharnieren
    const scharnierenPrijs = document.getElementById('scharnieren-prijs') as HTMLInputElement;
    const scharnierenAantal = document.getElementById('scharnieren-aantal') as HTMLInputElement;
    const scharnierenSubtotal = parseFloat(scharnierenPrijs.value || '0') * parseInt(scharnierenAantal.value || '0');
    (document.getElementById('scharnieren-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${scharnierenSubtotal.toFixed(2).replace('.', ',')}`;

    // Grepen
    const grepenPrijs = document.getElementById('grepen-prijs') as HTMLInputElement;
    const grepenAantal = document.getElementById('grepen-aantal') as HTMLInputElement;
    const grepenSubtotal = parseFloat(grepenPrijs.value || '0') * parseInt(grepenAantal.value || '0');
    (document.getElementById('grepen-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${grepenSubtotal.toFixed(2).replace('.', ',')}`;

    // Montage
    const montageCheckbox = document.getElementById('montage-checkbox') as HTMLInputElement;
    const montageUren = document.getElementById('montage-uren') as HTMLInputElement;
    const montageTarief = document.getElementById('montage-tarief') as HTMLInputElement;
    const montageSubtotal = montageCheckbox.checked ? 
      parseFloat(montageUren.value || '0') * parseFloat(montageTarief.value || '0') : 0;
    (document.getElementById('montage-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${montageSubtotal.toFixed(2).replace('.', ',')}`;

    // Transport
    const transportPrijs = document.getElementById('transport-prijs') as HTMLInputElement;
    const transportSubtotal = parseFloat(transportPrijs.value || '50');
    (document.getElementById('transport-subtotal') as HTMLElement).textContent = 
      `‚Ç¨ ${transportSubtotal.toFixed(2).replace('.', ',')}`;

    // Totals
    const totalExclBtw = frontenSubtotal + wangenSubtotal + plintenSubtotal + 
                         zijpanelenSubtotal + scharnierenSubtotal + grepenSubtotal + 
                         montageSubtotal + transportSubtotal;
    const totalBtw = totalExclBtw * 0.21;
    const totalInclBtw = totalExclBtw + totalBtw;

    (document.getElementById('total-excl-btw') as HTMLElement).textContent = 
      `‚Ç¨ ${totalExclBtw.toFixed(2).replace('.', ',')}`;
    (document.getElementById('total-btw') as HTMLElement).textContent = 
      `‚Ç¨ ${totalBtw.toFixed(2).replace('.', ',')}`;
    (document.getElementById('total-incl-btw') as HTMLElement).textContent = 
      `‚Ç¨ ${totalInclBtw.toFixed(2).replace('.', ',')}`;
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    // All input changes trigger recalculation
    const inputs = document.querySelectorAll('select, input[type="number"], input[type="checkbox"]');
    inputs.forEach(input => {
      input.addEventListener('change', updateCalculations);
      input.addEventListener('input', updateCalculations);
    });

    // Montage checkbox toggles details
    const montageCheckbox = document.getElementById('montage-checkbox') as HTMLInputElement;
    const montageDetails = document.getElementById('montage-details') as HTMLElement;
    
    montageCheckbox.addEventListener('change', () => {
      montageDetails.style.display = montageCheckbox.checked ? 'block' : 'none';
      updateCalculations();
    });

    // Initial calculation
    updateCalculations();
  });
</script>
